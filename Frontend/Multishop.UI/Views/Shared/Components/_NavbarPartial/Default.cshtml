                            <span class="badge text-secondary border border-secondary rounded-circle text-danger">0</span>
                        </a>
                    </div>
                </div>
            </nav>
        </div>

        <div class="col-lg-12">
            <nav class="navbar navbar-expand-lg bg-warning navbar-dark py-3 py-lg-0 px-0 row d-lg-none">
                <button type="button" class="navbar-toggler py-2 bg-danger text-center justify-items-center align-content-center" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="text-warning"> Multi Shop</span>
                </button>
                <div class="collapse navbar-collapse justify-content-between bg-warning text-dager text-center" id="navbarCollapse">
                    <a class="btn d-flex align-items-center justify-content-between bg-danger w-100" data-toggle="collapse" href="#navbar-vertical" style="height: 65px; padding: 0 30px;">
                        <h6 class="text-warning m-0 text-center"><i class="fa fa-bars mr-2"></i>Categories</h6>
                        <i class="fa fa-angle-down text-warning"></i>
                    </a>
                    <nav class="collapse position-absolute navbar navbar-vertical navbar-light align-items-start p-0 bg-warning" id="navbar-vertical" style="width: calc(100% - 30px); z-index: 999;">
                        <div class="navbar-nav w-100">

                            @{
                                foreach (var categoryVM in Model)
                                {
                                    <a href="~/Shop/Index/@categoryVM.Id" title="@categoryVM.Name's products" class="nav-item nav-link text-white">@categoryVM.Name</a>
                                }
                            }

                        </div>
                    </nav>
                    <div class="navbar-nav mr-auto py-3">
                        <a asp-action="Index" asp-controller="Contact" asp-area="" class="nav-item nav-link text-danger">Contact</a>
                        <div class="row d-flex py-2">
                            <div class="col-4"></div>
                            <a asp-action="Index" asp-controller="ShoppingCart" asp-area="" class="btn px-0 ml-3 col-2" title="Shopping Cart">
