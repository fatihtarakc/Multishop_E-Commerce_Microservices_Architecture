@model HomeVM

<div class="col-lg-12" style="margin-bottom:50px">
    <div id="header-carousel" class="carousel slide carousel-fade mb-30 mb-lg-0" data-ride="carousel">

        @{
            <ol class="carousel-indicators">
                @for (int i = 0; i < Model.AdvertisementVMs.Count(advertisement => advertisement.IsActive == true); i++)
                {
                    if (i == 0)
                    {
                        <li data-target="#header-carousel" data-slide-to="@i" class="active"></li>
                    }
                    else
                    {
                        <li data-target="#header-carousel" data-slide-to="@i"></li>
                    }
                }
            </ol>

            var count = 0;
            <div class="carousel-inner">
            @foreach (var advertisementVM in Model.AdvertisementVMs)
                {
                    @if (advertisementVM.IsActive)
                    {
                        @if (count == 0)
                        {
                            <div class="carousel-item position-relative active" style="height: 430px;">
                                @*<img class="position-absolute w-100 h-100" src="@advertisementVM.ImageUrl" style="object-fit: cover;" />*@
                                <img class="position-absolute w-100 h-100" src="@advertisementVM.ImageUrl" style="object-fit: fill;" />
                                <div class="carousel-caption d-flex flex-column align-items-center justify-content-center" style="height:430px">
                                    <div class="p-3" style="max-width: 700px; font-family:'Comic Sans MS'">
                                        <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">@advertisementVM.Title</h1>
                                        <p class="mx-md-5 px-5 animate__animated animate__bounceIn">@advertisementVM.Description</p>
                                        <a class="btn btn-outline-light py-2 px-4 mt-3 animate__animated animate__fadeInUp" href="#">Shop Now</a>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item position-relative" style="height: 430px;">
                                @*<img class="position-absolute w-100 h-100" src="@advertisementVM.ImageUrl" style="object-fit: cover;" />*@
                                <img class="position-absolute w-100 h-100" src="@advertisementVM.ImageUrl" style="object-fit:fill;" />
                                <div class="carousel-caption d-flex flex-column align-items-center justify-content-center" style="height:430px">
                                    <div class="p-3" style="max-width: 700px; font-family:'Comic Sans MS'">
                                        <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">@advertisementVM.Title</h1>
                                        <p class="mx-md-5 px-5 animate__animated animate__bounceIn">@advertisementVM.Description</p>
                                        <a class="btn btn-outline-light py-2 px-4 mt-3 animate__animated animate__fadeInUp" href="#">Shop Now</a>
                                    </div>
                                </div>
                            </div>
                        }

                        count++;
                    }
                }
            </div>
        }
    </div>
</div>