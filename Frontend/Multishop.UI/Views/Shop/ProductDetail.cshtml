@model ProductWithDetailImagesCommentVM

<!-- Shop Detail Start -->
<div class="container-fluid pb-5">
    <div class="row px-xl-5">

        <!-- Product Start -->
        @await Html.PartialAsync("/Views/Shop/_ProductPartial.cshtml")
        <!-- Product End -->

    </div>
    <div class="row px-xl-5">
        <div class="col">
            <div class="bg-light p-30">
                <div class="nav nav-tabs mb-4">
                    <a class="nav-item nav-link text-dark active" data-toggle="tab" href="#tab-pane-1">Description</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-2">Information</a>

                    @{
                        if (Model.CommentVMs is not null)
                        {
                            var reviewCount = Model.CommentVMs.Count();
                            <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-3">Reviews (@reviewCount)</a>
                        }
                        else
                        {
                            <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-3">Reviews (0)</a>
                        }
                    }

                </div>
                <div class="tab-content">

                    <div class="tab-pane fade show active" id="tab-pane-1">
                        <h4 class="mb-3">Product Description</h4>
                        <p>@Model.DetailVM.Description</p>
                    </div>
                    <div class="tab-pane fade" id="tab-pane-2">
                        <h4 class="mb-3">Additional Information</h4>
                        <p>@Model.DetailVM.Features</p>
                    </div>
                    
                    <!-- ProductReview Start -->
                    @await Html.PartialAsync("/Views/Shop/_ProductReviewPartial.cshtml")
                    <!-- ProductReview End -->

                </div>
            </div>
        </div>
    </div>
</div>
<!-- Shop Detail End -->