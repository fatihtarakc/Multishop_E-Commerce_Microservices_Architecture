@{
    ViewData["WebsiteTitle"] = "Contacts";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model IEnumerable<ContactVM>


<div class="row">
    <div class="col-md-12">
        <br />
        <div class="chart-box" style="font-family:'Comic Sans MS'">
            <br />
            <h2 class="text-center" style="font-family:'Comic Sans MS'; color:skyblue">Contacts</h2>
            <br /><hr />
            <div id="example_filter" class="dataTables_filter pull-right">
                <input class="form-control" id="placeholderInput" placeholder="Search" type="text">
            </div>
            <div class="row px-xl-5">
                <div class="col" style="padding:10px">
                    <div class="bg-white">
                        <div class="nav nav-tabs mb-4">
                            <a class="nav-item nav-link text-secondary active" style="font-size:14px;" data-toggle="tab" href="#tab-pane-1">All Messages</a>
                            <a class="nav-item nav-link text-secondary" style="font-size:14px;" data-toggle="tab" href="#tab-pane-2">Readings</a>
                            <a class="nav-item nav-link text-secondary" style="font-size:14px;" data-toggle="tab" href="#tab-pane-3">Unreadings</a>
                            <br />
                        </div>
                        <div class="tab-content">
                            <div class="tab-pane fade show active" id="tab-pane-1">
                                @* <h4 class="mb-3">Product Description</h4> *@
                                @await Html.PartialAsync("/Areas/Admin/Views/Contact/_AllContactMessagesPartial.cshtml")
                            </div>
                            <div class="tab-pane fade" id="tab-pane-2">
                                @* <h4 class="mb-3">Additional Information</h4> *@
                                @await Html.PartialAsync("/Areas/Admin/Views/Contact/_ReadingContactMessagesPartial.cshtml")
                            </div>
                            <!-- ProductReview Start -->
                            <div class="tab-pane fade" id="tab-pane-3">
                                @await Html.PartialAsync("/Areas/Admin/Views/Contact/_UnReadingContactMessagesPartial.cshtml")
                            </div>
                            <!-- ProductReview End -->
                        </div>
                    </div>
                </div>
            </div>
            <br />
        </div>
    </div>
</div>